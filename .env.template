# BENCHCOM Environment Configuration Template
# Copy this file to .env and modify as needed
# .env is gitignored and will not be committed

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=change-this-to-a-random-secret-key

# =============================================================================
# ACCESS CONTROL
# =============================================================================

# Allow benchmark submissions without authentication (true/false)
ALLOW_ANONYMOUS_SUBMISSIONS=true

# Allow browsing/reading data without authentication (true/false)
ALLOW_ANONYMOUS_BROWSING=true

# Give anonymous users admin privileges (see console output, IPs, etc.)
# Only enable for private/development instances
ANONYMOUS_ADMIN=false

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated, or * for all)
# Examples:
#   CORS_ORIGINS=http://localhost:3000,http://localhost:5173
#   CORS_ORIGINS=https://benchcom.example.com
#   CORS_ORIGINS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

