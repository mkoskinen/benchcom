# BENCHCOM Environment Configuration Template
# Copy this file to .env and modify as needed
# .env is gitignored and will not be committed

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key

# =============================================================================
# ACCESS CONTROL
# =============================================================================

# Allow benchmark submissions without authentication (true/false)
ALLOW_ANONYMOUS_SUBMISSIONS=true

# Allow browsing/reading data without authentication (true/false)
ALLOW_ANONYMOUS_BROWSING=true

# Give anonymous users admin privileges (see console output, IPs, etc.)
# Only enable for private/development instances
ANONYMOUS_ADMIN=false

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed origins for CORS (comma-separated, or * for all)
# Examples:
#   CORS_ORIGINS=http://localhost:3000,http://localhost:5173
#   CORS_ORIGINS=https://benchcom.example.com
#   CORS_ORIGINS=*
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# For docker-compose (containerized postgres):
POSTGRES_USER=benchcom
POSTGRES_PASSWORD=benchcom
POSTGRES_DB=benchcom
POSTGRES_HOST=db
POSTGRES_PORT=5432

# For production with external/local postgres, use something like:
# POSTGRES_USER=benchcom
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=benchcom
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# =============================================================================
# DEPLOYMENT MODE
# =============================================================================

# Set to "production" to disable debug features
# ENV=production

